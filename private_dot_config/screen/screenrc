startup_message off
autodetach on
shell /usr/bin/fish
compacthist on
scrollback 300000
defscrollback 300000

hardstatus alwaysfirstline
hardstatus string '%{yk}%-Lw%{= yk}%n%f* %t%{-}%+Lw'

mousetrack on # allow clicking between panes to change focus

# Window numbering starts at 1, not 0.
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

# keybinds
escape ^Kk # escape key = C-k
